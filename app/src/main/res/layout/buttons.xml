<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bojaTipki">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6"
        android:background="@color/bojaTipki"
        >

    <Button
        android:id="@+id/SIMPLEdeleteALL"
        android:backgroundTint="@color/bojaTipki"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="AC"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/bojaTipki"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1" />
    <Button
        android:id="@+id/SIMPLEdelete"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="DEL"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/bojaTipki"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        />
    <Button
        android:id="@+id/SIMPLEdivideResidueButton"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="%"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/bojaTipki"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="1"
        />
    <Button
        android:id="@+id/SIMPLEdivide"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="/"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/bojaTipki"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_columnWeight="1"
        />
        <Button
            android:id="@+id/SIMPLEbtn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEbt8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEbtn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEmultiply"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="x"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEbtn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="4"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEbt5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEbtn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEadding"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEbtn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEbt2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEbtn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEoduzimanje"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="-"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEbtn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEdecimalPoint"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:layout_columnSpan="2"
            android:textColor="@color/white"
            android:background="@color/bojaTipki"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/SIMPLEequals"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"/>






    </GridLayout>


</RelativeLayout>