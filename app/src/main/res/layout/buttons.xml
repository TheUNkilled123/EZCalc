<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brown">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6"
        android:background="@color/brown"
        >

    <Button
        android:id="@+id/brisanje"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="AC"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1" />
    <Button
        android:id="@+id/zagrade"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="DEL"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/brown"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        />
    <Button
        android:id="@+id/postotak"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="%"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/brown"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="1"
        />
    <Button
        android:id="@+id/dijeljenje"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="/"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/brown"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_columnWeight="1"
        />
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/mnozenje"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="x"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="4"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/zbrajanje"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/oduzimanje"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="-"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/tocka"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:layout_columnSpan="2"
            android:textColor="@color/white"
            android:background="@color/brown"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/jednako"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"/>






    </GridLayout>


</RelativeLayout>