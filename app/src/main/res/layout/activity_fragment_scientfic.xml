<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bojaTipki">

    <GridLayout
        android:id="@+id/GridLayout123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bojaTipki"
        android:columnCount="6"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/SIMPLEdeleteALL"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:backgroundTint="@color/bojaTipki"
            android:text="AC"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/SIMPLEdelete"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="DEL"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/SIMPLEdivideResidueButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="%"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/SIMPLEdivide"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="/"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/sinButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:onClick="onClick"
            android:text="sin"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/cosButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="cos"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/tanButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="tan"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/SIMPLEmultiply"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="x"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/openBrackets"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="("
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/closeBrackets"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text=")"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/sqrtButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="√"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/SIMPLEadding"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="+"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/piButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="π"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/lnButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="ln"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/absButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="abs"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/SIMPLEoduzimanje"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="-"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/toPowerButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="x²"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/memoryButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="M"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/memoryClearButton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bojaTipki"
            android:text="MR"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/SIMPLEequals"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/orange"
            android:text="="
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="25sp" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>